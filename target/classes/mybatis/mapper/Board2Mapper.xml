<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board2">
	<insert id="insert" parameterType="Board2">
		insert into board2(board2_id,title,writer,content) values(seq_board2.nextval,#{title},#{writer},#{content})
	</insert>
	<select id="selectAll" resultType="Board2">
		select * from Board2 order by board2_id desc 
	</select>
	<select id="select" parameterType="int" resultType="Board2">
		select * from board2 where board2_id=#{board2_id}
	</select>
	<delete id="delete" parameterType="int">
		delete from board2 where board2_id=#{board2_id}
	</delete>
	<update id="update" parameterType="Board2">
		update board2 set title=#{title}, writer=#{writer}, content=#{content} where board2_id=#{board2_id}
	</update>
</mapper>
